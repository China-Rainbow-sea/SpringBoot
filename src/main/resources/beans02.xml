<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--    通过 xml 配置 Monster bean 注入到 ioc 容器当中去-->
    <bean id="monster04" class="com.rainbowsea.springboot.bean.Monster">
        <!--       set 注入的方式-->
        <property name="name" value="狐狸精"></property>
        <property name="age" value="9000"></property>
        <property name="skill" value="迷惑"></property>
        <property name="id" value="2000"></property>
    </bean>
</beans>